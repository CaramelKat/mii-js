{
	"compilerOptions": {
		"strict": true,
		"strictPropertyInitialization": false,
		"sourceMap": true,
		"declaration": true,
		"resolveJsonModule": true,
		"module": "commonjs",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"baseUrl": "src",
		"outDir": "dist",
		"allowJs": true,
		"target": "es2022",
		"noEmitOnError": true,
		"noImplicitAny": false, // added this to avoid errors caused by bit-buffer types
		"paths": {
			"@/*": ["./*"]
		}
	},
	"include": ["src"]
}
